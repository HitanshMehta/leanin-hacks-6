{
    "manifest_version": 3,
    "name": "Read Aloud Extension",
    "version": "1.0",
    "description": "Convert selected text to speech",
    "permissions": ["storage", "contextMenus", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_title": "Read Aloud"
    }
  }
  