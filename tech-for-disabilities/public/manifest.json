{
    "manifest_version": 3,
    "name": "Assistive Accessibility Extension",
    "version": "1.0",
    "description": "Enhance digital accessibility with text-to-speech, sign language, and easy-read modes.",
    "permissions": ["storage", "contextMenus", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
      }
    }
  }
  