{
  "manifest_version": 3,
  "name": "Assistive Accessibility Extension",
  "version": "1.0",
  "permissions": ["storage", "contextMenus", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
    }
  }
}
